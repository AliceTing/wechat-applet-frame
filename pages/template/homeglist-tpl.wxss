.product {
  margin-bottom: 16rpx;
  width: 370rpx;
  background: white;
  padding-bottom: 10rpx;
  clear: both;
}

.product image {
  width: 100%;
  height: 360rpx;
}

.product .content{
  height: 120rpx;
}

.product .name {
  display: block;
  font-size: 30rpx;
  margin-top: 15rpx;
  padding: 0 2rpx;
  box-sizing: border-box;
  width: 100%;
  color: #2b2b2b;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.product .price {
  margin-top: 15rpx;
  padding: 0 2rpx;
  box-sizing: border-box;
}
.product .now-price {
  font-size: 28rpx;
  color: #ff6325;
  font-weight: 500;
}
.product .price .old-price {
  margin-left: 20rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: #ababab;
}

.product .price .num{
   font-size: 24rpx;
   float: right;
   padding-top: 12rpx;
   color: #888;
}





.product-item {
  margin: 20rpx 10rpx;
  width: 160rpx;
}
.product-item image {
  width: 160rpx;
  height: 128rpx;
}
.product-item .name {
  display: block;
  font-size: 22rpx;
  margin-top: 15rpx;
  width: 100%;
  color: #2b2b2b;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}




.homeshop {
  width: 376rpx;
  background: white;
 
  background: green;
}

.homeshop image {
  width: 100%;
  height: 210rpx;
   
}

.homeshop .shop-name{
  display: block;
  font-size: 30rpx;
  margin-top: 15rpx;
  padding: 0 2rpx;
  box-sizing: border-box;
  width: 90%;
  color: #2b2b2b;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-bottom: 20rpx;
}
