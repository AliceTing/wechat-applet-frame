/* pages/index/home/home.wxss */

@import "../template/homeglist-tpl.wxss";


.home-swiper{
  width: 100%;
  height: 380rpx;

}

.home-swiper .home-swiper-img{
  width: 100%;
  height: 380rpx;
  background: green;
}



/*
  模块menu
*/

.pin-menus{
  display: block;
  background-color: white;
}
.pin-menus .menus-model{
  display: block; 
  padding: 10px 0;
}
.pin-menus .menus-model .model-li{
  float: left; 
  width: 25%;
}
.pin-menus .menus-model .model-li image{
  width: 90rpx;
  height: 88rpx; 
  display: block; 
  margin: 0 auto;
}
.pin-menus .menus-model .model-li .t{
  font-size: 14px;
  color: #333; 
  text-align: center; 
  display: block; 
  margin-top: 5px;
}

.home-shop-grid{
  clear: both;
  padding-top: 40rpx;
  display: flex;
  display: -webkit-flex;
  align-content:  center; 
  flex-wrap: wrap;
  height: 0rpx;
}

.home-shop-grid image{
   width: 376rpx;
   height: 235rpx;
}


.home-section-title{
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: #F5F5F5;
  font-size: 30rpx;
  color: red;
  display: flex;
  display: -webkit-flex;
}
.home-section-title view{
  flex: 1;
  height: 1rpx;
  background: gainsboro;
  margin-top: 39rpx;
}


.home-section-title .len1{
  margin-right: 20rpx;
}
.home-section-title .len2{
  margin-left: 20rpx;
}







.home-goods-list{display: block;}
.home-goods-list block{display: block; margin: 0 -3px;}
.home-goods-list block .bd{width: 50%; float: left;}
.home-goods-list block .bd .bd{display: block; margin: 3px; background-color: #fff;}
.home-goods-list block .bd .pic{display: block; padding-top: 100%; position: relative;}
.home-goods-list block .bd .pic image{position: absolute; left: 0; top: 0; width: 100%; height: 100%;}
.home-goods-list block .bd .name{height: 38px; line-height: 1.2; padding: 5px 7px; display: block; left: 15px; font-size: 14px; color: #555; margin-bottom: 5px; overflow: hidden;}
.home-goods-list block .bd .line{display: block; padding: 3px 7px;}
.home-goods-list block .bd .line .span{color: #888; font-size: 12px; float: right; margin-top: 2px;}
.home-goods-list block .bd .line .strong{font-size: 16px; font-weight: 500; color: #ff4400;}



.home-goods-list {
  box-sizing: border-box;
  width: 100%;
  background-color: white;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #F5F5F5;
}











.home-goods-list{

  clear: both;

}